rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /user/{document} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == request.resource.data.uid;
    }
  }
}
